@{
    ViewBag.Title = "Profile";
}


@using (Html.BeginForm())
{
    if (Session["Email"] == null || Session["ID"] == null || Session["Password"] == null || Session["FullName"] == null || Session["BDate"] == null)
    {
        <h1>Trebuie sa te loghezi/inregistrezi mai intai!</h1>
    }
    else
    {
        <div class="wrapper">
            @Html.Partial("_SideBar")
            <div id="content">
                <nav class="navbar navbar-expand-lg navbar-light bg-light">
                    <div class="container-fluid">
                        <h1 id="paragraphs">FullName : @Session["FullName"]</h1>
                        <br />
                        <h1 id="paragraphs">EMail : @Session["Email"]</h1> 
                        <br />
                        <h1 id="paragraphs">BirthDate : @Session["BDate"]</h1>
                    </div>
                </nav>
            </div>
        </div>

    }

}
<style>
    #paragraphs
    { 
        font-size: 15px;
    }
    .wrapper {
        display: flex;
        width: 100%;
        align-items: stretch;
        text-align: center;
    }
    #content { 
        padding-top: 20px;
    }
</style>
