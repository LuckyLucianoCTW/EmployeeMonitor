@model DawProject.Models.Projects
@using (Html.BeginForm()) 
{
    <div class="border1">
        <a href="#pageSubmenu" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle" id="aRef">Add New Project</a>
    </div>
    <ul class="collapse list-unstyled" id="pageSubmenu">
        <div class="form-horizontal">
            <div class="form-group">
                @Html.LabelFor(x => x.ProjectName, new { @class = "control-label col-md-3" })
                <div class="col-md-9">
                    @Html.TextBoxFor(x => x.ProjectName, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.ProjectName, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="form-horizontal">
            <div class="form-group">
                @Html.LabelFor(x => x.StartDate, new { @class = "control-label col-md-3" })
                <div class="col-md-9">
                    @Html.TextBoxFor(x => x.StartDate, "{0:dd/MM/yyyy}", new { @class = "form-control", @type = "date" })
                    @Html.ValidationMessageFor(x => x.StartDate, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="form-horizontal">
            <div class="form-group">
                @Html.LabelFor(x => x.EndDate, new { @class = "control-label col-md-3" })
                <div class="col-md-9">
                    @Html.TextBoxFor(x => x.EndDate, "{0:dd/MM/yyyy}", new { @class = "form-control", @type = "date" })
                    @Html.ValidationMessageFor(x => x.EndDate, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="form-horizontal">
            <div class="form-group">
                @Html.LabelFor(x => x.ProjectDescription, new { @class = "control-label col-md-3" })
                <div class="col-md-9" id="description">
                    @Html.TextBoxFor(x => x.ProjectDescription, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.ProjectDescription, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                <input type="submit" value="Add Project" class="btn btn-primary" />
            </div>
        </div>
    </ul>

}