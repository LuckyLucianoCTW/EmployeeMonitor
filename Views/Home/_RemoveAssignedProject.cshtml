
@model DawProject.Models.ProjectsAssigned

@using (Html.BeginForm(actionName: "RemoveAssignProject", controllerName: "Home", method: FormMethod.Post))
{
    <div class="border1">
        <a href="#RemoveAssignProject" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle" id="aRef">Remove Employee From Project</a>
    </div>
    <ul class="collapse list-unstyled" id="RemoveAssignProject">
        <div class="form-horizontal">
            <div class="form-group">
                @Html.LabelFor(x => x.ProjectId, new { @class = "control-label col-md-3" })
                <div class="col-md-1">
                    @Html.DropDownList("ProjectID", (SelectList)ViewBag.ProjectNames)
                    @Html.ValidationMessageFor(x => x.ProjectId, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="form-horizontal">
            <div class="form-group">
                @Html.LabelFor(x => x.EmployeeId, new { @class = "control-label col-md-3" })
                <div class="col-md-1">
                    @Html.DropDownList("EmployeeID", (SelectList)ViewBag.EmployeeList)
                    @Html.ValidationMessageFor(x => x.EmployeeId, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                <input type="submit" value="Remove from Project" class="btn btn-primary" />
            </div>
        </div>
    </ul>
}